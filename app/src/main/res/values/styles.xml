<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Meowify" parent="AppTheme.NoActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorAccent">#fff</item>
        <item name="android:colorForeground">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="android:textColorSecondaryInverse">#000</item>
        <item name="android:textColorHint">#66ffffff</item>
        <item name="android:textColorHintInverse">#000</item>
        <item name="android:textColorTertiary">#ccffffff</item>
        <item name="android:textColorTertiaryInverse">#000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
